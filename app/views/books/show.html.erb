<div class="container px-5 px-sm-0">
 <div class="row">
  <div class="col-md-3">
    <%= render 'books/list', user: @user, book_new: @book_new %>
  </div>
 <div class= "col-md-8 offset-md-1">
  <h2>Book detail</h2>
  　<table class= "table">
  　  <thead>
      <tr>
       <th></th>
       <th>Title</th>
       <th>Opinion</th>
       <th colspan="3"></th>
      </tr>
     </thead>
      <tr>
        <td><%= link_to(@book.user) do %>
        <%= image_tag @book.user.get_profile_image(100,100) %><br>
        <%= link_to current_user.name, user_path(current_user) %>
        <% end %>
        </td>
        <td><%= link_to @book.title,@book %></td>
        <td><%= @book.body %></td>
        <td>
         <%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-secondary" %>
        </td>
        <td>
         <%= link_to "Destroy", book_path(@book.id), class: "btn btn-secondary", method: :delete, data: {confirm: "本当に消しますか？"} %>
        </td>
      </tr>
  　</table>
  </div>
</div>