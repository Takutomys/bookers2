<h2>User info</h2>
<%= image_tag user. get_profile_image(100,100) %>
<table class="table">
    <tr>
     <th>name</th>
     <th><%= user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= user.introduction %></th>
    </tr>
</table>
 <div class="row">
  <%= link_to edit_user_path(user), class: "btn btn-outline-secondary" do %>
    <i class="fa fa-user-cog fa-w-20"></i>
  <% end %>
 </div>
 <h2>New book</h2>
  <%= form_with model: book_new do |f| %>
 <div class="form-group">
  <%= f.label :title %><br>
  <%= f.text_field :title, autofocus: true%>
</div>
<div class="form-group">
  <%= f.label :body do %>Opinion<% end %><br>
  <%= f.text_area :body %>
</div>
<div class="form-group">
  <%= f.submit 'Create Book' %>
</div>
<% end %>